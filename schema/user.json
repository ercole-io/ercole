{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "username",
        "password",
        "groups",
        "provider"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 1
        },
        "password": {
            "type": "string"
        },
        "groups": {
            "anyOf": [
                {
                    "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uniqueItems": true
                },
                {
                    "type": "null"
                }
            ]
        },
        "provider": {
            "type": "string",
            "enum": [
                "basic",
                "ldap"
            ]
        }
    }
}