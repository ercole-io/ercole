{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "name",
        "roles"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[^\\s]+$"
        },
        "roles": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "pattern": "^[^\\s]+$"
            },
            "uniqueItems": true
        }
    }
}