{
	"DataService": {
		"RemoteEndpoint": "http://127.0.0.1:11111",
		"BindIP": "0.0.0.0",
		"Port": 11111,
		"LogHTTPRequest": true,
		"LogInsertingHostdata": false,
		"LogDataPatching": true,
		"EnablePatching": true,
		"AgentUsername": "user",
		"AgentPassword": "password",
		"CurrentHostCleaningJob": {
			"Crontab": "*/1 * * * * *",
			"HourThreshold": 1,
			"RunAtStartup": false
		},
		"ArchivedHostCleaningJob": {
			"Crontab": "*/1 * * * * *",
			"HourThreshold": 10,
			"RunAtStartup": false
		}
	},
	"AlertService": {
		"RemoteEndpoint": "http://127.0.0.1:11112",
		"BindIP": "127.0.0.1",
		"Port": 11112,
		"LogHTTPRequest": true,
		"LogMessages": true,
		"LogAlertThrows": true,
		"PublisherUsername": "publisher",
		"PublisherPassword": "r4nd0mS3cR3tp4ssW0rd",
		"QueueBufferSize": 1024,
		"FreshnessCheckJob": {
			"Crontab": "*/1 * * * * *",
			"DaysThreshold": 1,
			"RunAtStartup": false
		}
	},
	"APIService": {
		"RemoteEndpoint": "http://127.0.0.1:11113",
		"BindIP": "0.0.0.0",
		"Port": 11113,	
		"LogHTTPRequest": true,
		"ReadOnly": false,
		"EnableInsertingCustomPatchingFunction": true,
		"AuthenticationProvider": {
            "Type": "basic",
            "Username": "user",
            "Password": "password",
			"PrivateKey": "/path/to/my_private_rsa_key",
			"PublicKey": "/path/to/my_public_rsa_key.pub"
        },
		"OperatingSystemAggregationRules": [
			{ "Regex": "^Red Hat Enterprise Linux Server release 7.*$", "Group": "RHEL7" },
			{ "Regex": "^Red Hat Enterprise Linux Server release 6.*$", "Group": "RHEL6" },
			{ "Regex": "^Red Hat Enterprise Linux Server release 5.*$", "Group": "RHEL5" },
			{ "Regex": "^HPUX.*$", "Group": "HPUX" },
			{ "Regex": "^AIX.*$", "Group": "AIX" }
		],
		"DefaultDatabaseTags":[
			"coolest",
			"very important",
			"gdpr-compliant"
		]
	},
	"RepoService": {
		"UpstreamRepositories": [
			{
				"Name": "ercole-agent",
				"Type": "github-release",
				"URL": "https://api.github.com/repos/ercole-io/ercole-agent/releases"
			},
			{
				"Name": "ercole-agent-rhel5",
				"Type": "github-release",
				"URL": "https://api.github.com/repos/ercole-io/ercole-agent-rhel5/releases"
			},
			{
				"Name": "ercole-agent-aix",
				"Type": "github-release",
				"URL": "https://api.github.com/repos/ercole-io/ercole-agent-aix/releases"
			},
			{
				"Name": "ercole-agent-hpux",
				"Type": "github-release",
				"URL": "https://api.github.com/repos/ercole-io/ercole-agent-hpux/releases"
			},
			{
				"Name": "ercole-agent-exadata",
				"Type": "github-release",
				"URL": "https://api.github.com/repos/ercole-io/ercole-agent-exadata/releases"
			},
			{
				"Name": "ercole-agent-virtualization",
				"Type": "github-release",
				"URL": "https://api.github.com/repos/ercole-io/ercole-agent-virtualization/releases"
			}
		],
		"DistributedFiles": "distributed_files/",
		"HTTP": {
			"Enable": true,
			"RemoteEndpoint": "http://127.0.0.1:11114",
			"BindIP": "0.0.0.0",
			"Port": 11114,
			"LogHTTPRequest": true
		},
		"SFTP": {
			"Enable": true,
			"RemoteEndpoint": "sftp://127.0.0.1:11115",
			"BindIP": "0.0.0.0",
			"Port": 11115,
			"PrivateKey": "/path/to/my_private_rsa_key",
			"LogConnections": true,
			"DebugConnections": true
		}
	},
	"Mongodb": {
		"URI": "mongodb://localhost:27017/ercole",
		"DBName": "ercole",
		"Migrate": true
	},
	"ResourceFilePath": "resources/"
}